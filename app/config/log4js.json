{
    "appenders": [
        {
            "type": "console",
            "layout": {
                "type": "pattern",
                "pattern": "%m"
            },
            "category": "console-logger"
        },{
            "category": "test-file-appender", 
            
            "type": "file",
            "maxLogSize": 10240,
            "backups": 10,
            "layout": {
                "type": "pattern",
                "pattern": "%d{yyyy-MM-dd hh:mm:ss.SSS} [%-5p] [%c] - %m"
            }
        }
    ],
    "replaceConsole": true 
}